#!/bin/bash -ex

dl() {
    [ "$FAB_HTTP_PROXY" ] && PROXY="--proxy $FAB_HTTP_PROXY"
    cd $2; curl -L -f -O -J $PROXY $1; cd -
}

URL=https://github.com/invoiceninja/invoiceninja/releases/download/v5.5.23/invoiceninja.zip
SRC=/usr/local/src

# This URL will auto download latest stable, works but found late in 17.0
# so usage deferred
#FILE=$(curl -sI https://download.invoiceninja.com/ | grep -i location | sed "s|^.*ocation: /||; s|\r||")
#URL=https://download.invoiceninja.com/$FILE

dl $URL $SRC #/invoiceninja.zip
